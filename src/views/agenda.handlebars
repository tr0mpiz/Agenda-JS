    <!-- DataTales Example -->
  <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">TURNOS</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id cita</th>
                            <th>Fecha cita</th>
                            <th>Hora</th>
                            <th>Nombre Paciente</th>
                            <th>Apellido Paciente</th>
                            <th>DNI Paciente</th>
                            <th>Contacto Paciente</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                          <th>Id cita</th>
                          <th>Fecha cita</th>
                          <th>Hora</th>
                          <th>Nombre Paciente</th>
                          <th>Apellido Paciente</th>
                          <th>DNI Paciente</th>
                          <th>Contacto Paciente</th>
                          <th>Estado</th>
                          <th>Acciones</th>
                        </tr>
                    </tfoot>
                    
                    <tbody id="table-product-body">
                      {{#each agenda}}
                      <tr id="paciente-{{this.id_agenda}}">
                        <td>{{this.id_agenda}}</td>
                        <td>{{this.fecha_cita}}</td>
                        <td>{{this.hora}}</td>
                        <td>{{this.nombre_paciente}}</td>
                        <td>{{this.apellido_paciente}}</td>
                        <td><a href="/paciente/modificar?dni={{this.dni_paciente}}">{{this.dni_paciente}}</a></td>
                        <td>{{this.contacto_paciente}}</td>
                        <td><span class="badge bg-white text-primary">{{this.descripcion}}</span></td>
                        <td>
                          <div class="btn-group btn-group-horizontal">
                            
                            <button data-bs-toggle="tooltip" data-bs-offset="0,4" data-bs-placement="top" data-bs-html="true" title="" data-bs-original-title="<i class='bx bx-chair bx-xs' ></i> <span>Confirmar asistencia</span>"  onclick="peticionAjax('/agenda/ensala?id={{this.id_agenda}}','GET','true')" class="btn btn-icon btn-outline-success ml-1"><i class="bx bx-chair"></i></button>
                            <button data-bs-toggle="tooltip" data-bs-offset="0,4" data-bs-placement="top" data-bs-html="true" title="" data-bs-original-title="<i class='bx bx-trash bx-xs' ></i> <span>Eliminar Cita</span>" onclick="peticionAjax('/agenda/eliminar?id={{this.id_agenda}}','DELETE','true')" class="btn btn-icon btn-outline-danger ml-1"><i class="bi bi-trash"></i></button>
                            {{!-- <a data-bs-toggle="tooltip" data-bs-offset="0,4" data-bs-placement="top" data-bs-html="true" title="" data-bs-original-title="<i class='bx bx-pencil bx-xs' ></i> <span>Modificar Cita</span>" href="/agenda/alta?id={{this.id_agenda}}"  class="btn btn-icon btn-outline-primary m-1"><i class="bi bi-pencil-fill"></i></a> --}}
                          </div>
                        </td>
                        
                      </tr>
                      {{/each}}
                    </tbody>
                </table>

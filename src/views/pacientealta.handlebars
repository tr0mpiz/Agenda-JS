resetButton.addEventListener('click', resetCanvas);

function resetCanvas() {
  // Borra todo el contenido del lienzo
  ctx.clearRect(0, 0, canvas.width, canvas.height);
  ctx.strokeStyle = 'black';
  // Vuelve a dibujar solo los pies
  drawFeet();
}
